<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.next.testnb.MainActivity">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name" />

    <TextView
        android:id="@+id/txt_phno"
        android:layout_below="@id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone No" />

    <TextView
        android:id="@+id/txt_indate"
        android:layout_below="@id/txt_phno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="idate" />

    <TextView
        android:id="@+id/txt_outdate"
        android:layout_below="@id/txt_phno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="outtime" />

    <TextView
        android:id="@+id/txt_inTime"
        android:layout_below="@id/txt_indate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="intime" />

    <TextView
        android:id="@+id/txt_outTime"
        android:layout_below="@id/txt_indate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="outtime" />

<TextView
    android:id="@+id/txt_pr"
    android:layout_below="@id/txt_inTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="pr"/>

    <TextView
        android:id="@+id/txt_rr"
        android:layout_below="@id/txt_pr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rr" />

    <TextView
        android:id="@+id/txt_nrr"
        android:layout_below="@id/txt_pr"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nrr" />

    <TextView
        android:id="@+id/txt_nDays"
        android:layout_below="@id/txt_pr"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Days" />

   <TextView
       android:id="@+id/txt_total"
       android:layout_below="@id/txt_rr"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Total"/>

    <TextView
        android:id="@+id/txt_depamnt"
        android:layout_below="@id/txt_rr"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Depamnt"/>
    <TextView
        android:id="@+id/txt_depdate"
        android:layout_below="@id/txt_rr"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Depamntdate"/>
    <TextView
        android:id="@+id/txt_billno"
        android:layout_below="@id/txt_total"
        android:text="billno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_bookno"
        android:layout_below="@id/txt_total"
        android:text="book no"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_signature"
        android:layout_below="@id/txt_billno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sign"/>
    <Button
        android:id="@+id/button_out_done"
        android:layout_below="@id/txt_billno"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
